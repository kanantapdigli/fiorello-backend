@using Fiorello.Areas.admin.ViewModels.Worker
@model WorkerDetailsVM

<!-- Begin Page Content -->
<div class="container-fluid">
	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Worker Info</h1>
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Profile Picture</th>
							<th>Fullname</th>
							<th>Duty</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								<img class="w-25" src="~/assets/img/@Model.Photo">
							</td>
							<td>@Model.Name @Model.Surname</td>
							<td>@Model.Duty</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>