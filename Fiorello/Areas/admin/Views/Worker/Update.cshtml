@using Fiorello.Areas.admin.ViewModels.Worker
@model WorkerUpdateVM

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Worker</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="update" asp-controller="worker" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input class="form-control" asp-for="Surname" />
                    <span asp-validation-for="Surname"></span>
                </div>>
                <div class="form-group">
                    <label asp-for="DutyId"></label>
                    <select class="form-control form-select" asp-for="DutyId" asp-items="Model.DutyTitles">
                        <option value="">-- Choose --</option>
                    </select>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Photo"></label></br>
                    <input type="file" class="form-label" asp-for="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->