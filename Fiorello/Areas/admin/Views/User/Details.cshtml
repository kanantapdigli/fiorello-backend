@using Fiorello.Areas.admin.ViewModels.User
@model UserDetailsVM

<!-- Begin Page Content -->
<div class="container-fluid">
	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">User details</h1>
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>UserName</th>
							<th>Fullname</th>
							<th>Email</th>
							<th>Country</th>
							<th>Phone Number</th>
							<th>Roles</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Model.Username</td>
							<td>@Model.Fullname</td>
							<td>@Model.Email</td>
							<td>@Model.Country</td>
							<td>@Model.PhoneNumber</td>
							<td>
								@foreach (var role in Model.Roles)
								{
									<span>@role</span><br>
								}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->
