@using Fiorello.Areas.admin.ViewModels.SliderContent
@model SliderContentCreateVM

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Create Slider Content</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="create" asp-controller="slidercontent" method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderId"></label>
                    <select class="form-control form-select" asp-for="SliderId" asp-items="Model.SliderTitleList">
                        <option value="">-- Choose --</option>
                    </select>
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="About"></label>
                    <input class="form-control" asp-for="About" />
                    <span asp-validation-for="About"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
